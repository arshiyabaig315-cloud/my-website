  <script>
    function toggleFAQ(element) {
      const p = element.nextElementSibling;
      p.style.display = p.style.display === 'block' ? 'none' : 'block';
    }

    function handleChat() {
      const input = document.getElementById("userInput").value.toLowerCase();
      const responseDiv = document.getElementById("chatResponse");

      let response = "ðŸ¤– I'm not sure how to answer that, but I'm learning!";

      if (input.includes("ai")) {
        response = "ðŸ¤– AI stands for Artificial Intelligence â€“ it mimics human learning!";
      } else if (input.includes("job")) {
        response = "ðŸ¤– Many jobs will evolve rather than disappear. Focus on creativity and people skills!";
      } else if (input.includes("future")) {
        response = "ðŸ¤– The future with AI will be smart, efficient, and full of innovation!";
      } else if (input.trim() === "") {
        response = "ðŸ¤– Please type a question first!";
      }

      responseDiv.innerHTML = `<p style="color:#00d4ff;">${response}</p>`;
    }
  </script>
